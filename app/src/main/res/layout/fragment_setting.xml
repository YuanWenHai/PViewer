<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/fragment_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:title="@string/setting"
            android:theme="@style/AppActionBarTheme"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_setting_server_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <Button
                android:id="@+id/fragment_setting_server_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_server_button_text"
                android:background="#00000000"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
</layout>